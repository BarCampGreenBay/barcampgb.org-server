description "{{ description }}"

start on (local-filesystems and net-device-up)
stop on shutdown

respawn
respawn limit 20 5

script
    echo $$ > /var/run/{{ service }}.pid
    exec travisci-webhook --port={{ port }} --path={{ location }} --token={{ token }} --log=/var/log/nodejs/{{ service }}.log --rule [ --event={{ event }} --match="{{ match }}" --exec="{{ command }}" ]
end script

pre-start script
    mkdir -p /var/log/nodejs
    echo "\n[`date -u +%Y-%m-%dT%T.%3NZ`] (sys) Starting" >> /var/log/nodejs/{{ service }}.log
end script

pre-stop script
    rm /var/run/{{ service }}.pid
    echo "[`date -u +%Y-%m-%dT%T.%3NZ`] (sys) Stopping\n" >> /var/log/nodejs/{{ service }}.log
end script
